{% extends 'base.html.twig' %}

{% block title %}Hello VideoFormController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">
    <h1>Hello,  go add new video! âœ…</h1>
    {{ form_start(form) }}
        {{ form_label(form.title) }}
        {{ form_widget(form.title)
        {{ form_label(form.category) }}
        {{ form_widget(form.category) }} </br>
        {% if form.created_at is defined %}
        <label for="video_form_file" class="required">Video (mp4 file)</label>
        <div class="custom-file"><input type="file" id="video_form_file" name="video_form[file]" required="required" class="custom-file-input" />
            <label for="video_form_file"  class="custom-file-label"></label>
        </div>
            <div class = "custom-file">
                {{ form_row(form.file) }}
            </div>
            {{ form_label(form.created_at) }}
            {{ form_widget(form.created_at) }} </br>
        {% endif %}
        {{ form_label(form.agreeTerms) }}
        {{ form_widget(form.agreeTerms) }} </br>
        <p>
            {{ form_label(form.save) }}
            {{ form_widget(form.save) }}
        </p>
    {{ form_end(form) }}
</div>
{% endblock %}
